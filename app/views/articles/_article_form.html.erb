<%= form_with model: article do |form| %>
    <div class="mb-3">
        <%= form.label :title %><br>
        <%= form.text_field :title, class: "form-control", placeholder: "My fabulous guide", value: article.title %>
        <% article.errors.full_messages_for(:title).each do |message| %>
            <div class="alert alert-warning", role="alert">
                <%= message %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= form.label :body %><br>
        <%= form.text_area :body, class: "form-control", placeholder: "In this guide, we're going to learn...", value: article.body %>
        <% article.errors.full_messages_for(:body).each do |message| %>
            <div class="alert alert-warning" role="alert">
                <%= message %>
            </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= form.submit "Save!", class: "btn btn-primary" %>
    </div>
<% end %>
