<h1>Game Updates</h1>

<% if user_signed_in? and current_user.admin? %>
    <div class="d-sm mb-2">
        <form action="<%= new_article_path %>" method="get">
            <button class="btn btn-primary" name="section" type="submit" value="game_update">Write a new update</button>
        </form>
    </div>
<% end %>

<% Article.where(article_type: :game_update).each do |article| %>
    <div class="card text-center mb-3">
        <div class="card-body">
            <h3><%= link_to article.title, article %></h3>
        </div>
        <div class="card-footer text-muted">
            Created at <%= article.created_at.to_formatted_s(:short) %>
        </div>
    </div>
<% end %>
