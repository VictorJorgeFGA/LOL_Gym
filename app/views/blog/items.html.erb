<h1>Items</h1>

<div class="d-sm mb-2">
    <form action="<%= new_article_path %>" method="get">
        <button class="btn btn-primary" name="section" type="submit" value="item_guide">Write an item guide!</button>
    </form>
</div>

<% Article.where(article_type: :item_guide).each do |article| %>
    <div class="card text-center mb-3">
        <div class="card-body">
            <h3><%= link_to article.title, article %></h3>
        </div>
        <div class="card-footer text-muted">
            Created at <%= article.created_at.to_formatted_s(:short) %>
        </div>
    </div>
<% end %>