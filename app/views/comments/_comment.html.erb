<div class="card mb-2">
    <div class="card-body">
        <p>Author: <strong><%= comment.user.email %></strong></p>
        <p>"<%= comment.content %>"</p>
        <p><%= comment.created_at.to_formatted_s(:short)%></p>

        <% if user_signed_in? and (comment.user_id == current_user.id or current_user.admin?) %>
            <div class="mt-2 mb-2">
                <%= link_to "Delete comment", article_comment_path(comment.article, comment), method: "delete" %>
            </div>
        <% end %>
    </div>
</div>
